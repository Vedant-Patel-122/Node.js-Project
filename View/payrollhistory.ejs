<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Kiran Auto Parts And Services</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }

    h3 {
      text-align: center;
      color: #34495e;
      margin-bottom: 20px;
    }

    .separator-line {
      border: none;
      height: 1px;
      background-color: #ccc;
      margin: 20px auto;
      width: 80%;
      max-width: 700px;
    }

    .form-container {
      background-color: #fff;
      padding: 20px;
      margin: 0 auto 30px;
      max-width: 600px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-container h2 {
      text-align: center;
      color: #2980b9;
      margin-bottom: 20px;
    }

    .form-container label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
      color: #555;
    }

    .form-container input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      font-size: 14px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .form-container button {
      padding: 10px 20px;
      background-color: #27ae60;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      font-size: 16px;
      display: block;
      margin: 0 auto;
      transition: background-color 0.3s ease;
    }

    .form-container button:hover {
      background-color: #219150;
    }

    .table-container {
      overflow-x: auto;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      min-width: 600px;
    }

    th, td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: center;
      font-size: 14px;
    }

    th {
      background-color: #2980b9;
      color: white;
    }

    .no-records {
      text-align: center;
      color: gray;
      margin-top: 20px;
    }

    .salary-summary {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin: 20px auto;
      max-width: 800px;
    }

    .summary-card {
      flex: 1 1 180px;
      background-color: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      text-align: center;
      transition: transform 0.2s ease;
    }

    .summary-card:hover {
      transform: scale(1.02);
    }

    .summary-card h3 {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .summary-card .amount {
      font-size: 24px;
      font-weight: bold;
    }

    .bg-end-salary {
      background-color: #e8f6f3;
      color: #1abc9c;
    }

    .bg-total-salary {
      background-color: #fef9e7;
      color: #f39c12;
    }

    .bg-end-salary h3 {
      color: #16a085;
    }

    .bg-total-salary h3 {
      color: #d4ac0d;
    }

    @media (max-width: 600px) {
  .form-container {
    padding: 15px;
    max-width: 100%;
  }

  h3 {
    font-size: 1.2rem;
  }

  th, td {
    font-size: 13px;
    padding: 8px;
  }

  table {
    min-width: 500px;
  }

  .salary-summary {
    flex-direction: column;
    align-items: center;
  }

  .summary-card h3 {
    font-size: 18px; /* Reduced font size for small screens */
  }

  .summary-card .amount {
    font-size: 18px; /* Reduced font size for small screens */
  }

  .summary-card {
    padding: 15px;
  }
}
  </style>
</head>

<body>

  <h3>Employee Attendance System</h3>

  <div class="form-container">
    <h2>Employee Payroll History</h2>
    <form action="/findpayrolldata" method="post">
      <label for="id">Employee Id</label>
      <input type="number" id="id" name="id" value="<%= empid %>" required>

      <label for="monthyear">Month and Year:</label>
      <input type="month" id="monthyear" name="monthyear">

      <button type="submit">Search</button>
    </form>
  </div>

  <% if (employees && employees.length > 0) { %>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Employee ID</th>
            <th>Working Day</th>
            <th>Status</th>
            <th>Uppad(Rs.)</th>
            <th>Remain Salary(Rs.)</th>
            <th>Salary Per Day(Rs.)</th>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach(emp => { 
            const workingDate = new Date(emp.workingday);
            const month = workingDate.getMonth() + 1;
            const date = workingDate.getDate();
            const year = workingDate.getFullYear();
            const formattedDate = `${date}-${month}-${year}`;
          %>
            <tr>
              <td><%= emp.empid %></td>
              <td><%= formattedDate %></td>
              <td><%= emp.status %></td>
              <td><%= emp.uppad %></td>
              <td><%= emp.remainsalary %></td>
              <td><%= emp.salaryperday %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <p class="no-records">No employee payroll data found</p>
  <% } %>

  <hr class="separator-line">

  <div class="salary-summary">
    <% if (employees && employees.length > 0) { 
         const salary = employees[0].e_salary;
         const remain_salary = employees[0].salary_diff;
    %>
      <div class="summary-card bg-end-salary">
        <h3>End-of-month Salary</h3>
        <p class="amount"><i class="fa fa-wallet"></i> ₹<%= remain_salary %></p>
      </div>

      <div class="summary-card bg-total-salary">
        <h3>Total Monthly Salary</h3>
        <p class="amount"><i class="fa fa-money-bill"></i> ₹<%= salary %></p>
      </div>

    <% } else { %>

      <div class="summary-card bg-end-salary">
        <h3>End-of-month Salary</h3>
        <p class="amount"><i class="fa fa-wallet"></i> ₹0</p>
      </div>

      <div class="summary-card bg-total-salary">
        <h3>Total Monthly Salary</h3>
        <p class="amount"><i class="fa fa-money-bill"></i> ₹0</p>
      </div>

    <% } %>
  </div>

</body>
</html>
