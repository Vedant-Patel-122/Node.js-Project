<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Employee Attendance</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }

    h3 {
      text-align: center;
      color: #34495e;
    }

    .form-container {
      background-color: #fff;
      padding: 20px;
      margin: 20px auto;
      max-width: 500px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-container h2 {
      text-align: center;
      color: #2980b9;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-size: 14px;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      font-size: 14px;
      box-sizing: border-box;
    }

    button {
      padding: 10px 20px;
      background-color: #27ae60;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      font-size: 16px;
      display: block;
      margin: 0 auto;
    }

    table {
      width: 100%;
      background-color: #fff;
      border-collapse: collapse;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-top: 30px;
      overflow-x: auto;
    }

    th, td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: center;
      font-size: 14px;
    }

    th {
      background-color: #2980b9;
      color: white;
    }

    a {
      text-decoration: none;
      margin: 0 5px;
    }

    .edit {
      color: #2980b9;
    }

    .payroll {
      color: #27ae60;
    }

    .delete {
      color: #c0392b;
    }

    .no-records {
      text-align: center;
      color: #888;
      margin-top: 20px;
    }

    @media (max-width: 600px) {
      .form-container {
        padding: 15px;
      }

      table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }

      th, td {
        font-size: 13px;
        padding: 8px;
      }

      button {
        font-size: 14px;
        padding: 8px 16px;
      }
    }

    /* SweetAlert custom responsive styling */
    .swal2-popup.responsive-swal {
      font-size: 14px !important;
    }
  </style>
</head>

<body>

  <h3>Employee Attendance System</h3>

  <div class="form-container">
    <h2>Add Employee Data</h2>
    <form action="/submit" method="post">
      <label for="id">Employee Id</label>
      <input type="number" id="id" name="id" required>

      <label for="name">Employee Name</label>
      <input type="text" id="name" name="name" required>

      <label for="mobile">Employee Mobile Number</label>
      <input type="number" id="mobile" name="mobile" required maxlength="15">

      <label for="salary">Employee Total Salary(Rs.)</label>
      <input type="number" id="salary" name="salary" required>

      <button type="submit">Add Employee</button>
    </form>
  </div>

  <% if (employees && employees.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Mobile</th>
          <th>Salary(Rs.)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(emp => { %>
          <tr>
            <td><%= emp.empid %></td>
            <td><%= emp.empname %></td>
            <td><%= emp.mobile %></td>
            <td><%= emp.salary %></td>
            <td>
              <a href="/edit/<%= emp.empid %>/<%= emp.empname %>/<%= emp.mobile %>/<%= emp.salary %>" class="edit">Edit</a> |
              <a href="/payroll/<%= emp.empid %>" class="payroll">Payroll</a> |
              <a href="/delete/<%= emp.empid %>" class="delete" onclick="return confirm('Are you sure?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="no-records">No employee data found.</p>
  <% } %>

  <!-- SweetAlert Alert if alert variable is set -->
  <% if (typeof alert !== 'undefined' && alert) { %>
    <script>
      Swal.fire({
        icon: 'warning', // or 'success', 'error', etc.
        text: "<%= alert %>",
        confirmButtonColor: '#27ae60',
        width: window.innerWidth < 500 ? '90%' : '400px',
        padding: '1.5em',
        backdrop: true,
        customClass: {
          popup: 'responsive-swal'
        }
      });
    </script>
  <% } %>

</body>
</html>
